# Fictures AI Server Environment Configuration

# =============================================================================
# Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1

# =============================================================================
# Model Configuration
# =============================================================================

# Text Generation Model (Gemma)
TEXT_MODEL_NAME=google/gemma-2b-it
TEXT_MODEL_PATH=./models/text/gemma-2b-it
TEXT_MAX_MODEL_LEN=4096
TEXT_GPU_MEMORY_UTILIZATION=0.5

# Image Generation Model (SDXL)
IMAGE_MODEL_NAME=stabilityai/stable-diffusion-xl-base-1.0
IMAGE_MODEL_PATH=./models/images/stable-diffusion-xl-base-1.0
IMAGE_GPU_MEMORY_UTILIZATION=0.9

# ComfyUI Configuration (for advanced image generation)
# ComfyUI runs as a separate HTTP server
# Install ComfyUI at: ~/.local/comfyui (see docs for installation instructions)
COMFYUI_URL=http://127.0.0.1:8188

# =============================================================================
# Performance Settings
# =============================================================================

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
MODEL_CACHE_DIR=~/.cache/huggingface

# vLLM Configuration
VLLM_TENSOR_PARALLEL_SIZE=1
VLLM_MAX_NUM_SEQS=256

# Diffusers Configuration
DIFFUSERS_ENABLE_CPU_OFFLOAD=false

# =============================================================================
# API Settings
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Request Limits
MAX_PROMPT_LENGTH=2048
MAX_IMAGE_SIZE=2048
DEFAULT_TIMEOUT=300

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Authentication & Database
# =============================================================================

# Database Configuration (for API key authentication)
# Use the same DATABASE_URL from the web application (pooled connection)
# Example: postgresql://user:password@host-pooler.region.aws.neon.tech:5432/database
DATABASE_URL=postgresql://user:password@host:5432/database

# Authentication
# Set to false to disable API key authentication (development only, never in production)
REQUIRE_API_KEY=true

# =============================================================================
# Hugging Face Authentication
# =============================================================================
HF_TOKEN=your_huggingface_token_here
