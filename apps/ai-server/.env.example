# Fictures AI Server Environment Configuration

# =============================================================================
# Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1

# =============================================================================
# Model Configuration
# =============================================================================

# Text Generation Model (Gemma)
TEXT_MODEL_NAME=google/gemma-2b-it
TEXT_MODEL_PATH=./models/text/gemma-2b-it
TEXT_MAX_MODEL_LEN=4096
TEXT_GPU_MEMORY_UTILIZATION=0.5

# Image Generation Model (SDXL)
IMAGE_MODEL_NAME=stabilityai/stable-diffusion-xl-base-1.0
IMAGE_MODEL_PATH=./models/images/stable-diffusion-xl-base-1.0
IMAGE_GPU_MEMORY_UTILIZATION=0.9

# =============================================================================
# Performance Settings
# =============================================================================

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
MODEL_CACHE_DIR=~/.cache/huggingface

# vLLM Configuration
VLLM_TENSOR_PARALLEL_SIZE=1
VLLM_MAX_NUM_SEQS=256

# Diffusers Configuration
DIFFUSERS_ENABLE_CPU_OFFLOAD=false

# =============================================================================
# API Settings
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Request Limits
MAX_PROMPT_LENGTH=2048
MAX_IMAGE_SIZE=2048
DEFAULT_TIMEOUT=300

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
