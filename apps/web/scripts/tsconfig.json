{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "node16",
        "types": ["node"],
        "lib": ["es2020"],
        "target": "ES2020",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.mjs"],
    "exclude": ["node_modules"]
}
