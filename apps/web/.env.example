# Authentication
AUTH_SECRET=your_auth_secret_here
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database & Storage
DATABASE_URL=your_neon_database_url_with_pooler
DATABASE_URL_UNPOOLED=your_neon_database_url_without_pooler
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token
REDIS_URL=your_redis_url

# AI Integration
# -----------------------------------------------------------
# TEXT_GENERATION_PROVIDER: Select which model provider to use
# Options: "gemini" (Google Gemini API) | "ai-server" (Local Qwen-3 via AI server)
# -----------------------------------------------------------
TEXT_GENERATION_PROVIDER=gemini

# Gemini Configuration (when TEXT_GENERATION_PROVIDER=gemini)
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key
GEMINI_MODEL_NAME=gemini-2.5-flash-mini
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# AI Server Configuration (when TEXT_GENERATION_PROVIDER=ai-server)
# -----------------------------------------------------------
# Shared configuration (fallback for image and text if specific URLs not set)
AI_SERVER_URL=http://localhost:8000
AI_SERVER_TIMEOUT=120000

# Image Generation AI Server (optional - falls back to AI_SERVER_URL if not set)
# Use this when you have a separate server for image generation
AI_SERVER_IMAGE_URL=http://localhost:8000
AI_SERVER_IMAGE_TIMEOUT=120000

# Text Generation AI Server (optional - falls back to AI_SERVER_URL if not set)
# Use this when you have a separate server for text generation
AI_SERVER_TEXT_URL=http://localhost:8000
AI_SERVER_TEXT_TIMEOUT=120000

# ComfyUI Configuration for AI Server (optional - used by ai-server for image generation)
AI_SERVER_COMFYUI_URL=http://127.0.0.1:8188

# AI Server Generation Mode (optional - used by ai-server to control generation behavior)
# Options: "image" | "text" | "both"
AI_SERVER_GENERATION_MODE=image

# Image Generation Configuration
# -----------------------------------------------------------
# IMAGE_GENERATION_PROVIDER: Select which model provider to use for images
# Options: "gemini" (Google Imagen API) | "ai-server" (Local Qwen-Image-Lightning via AI server)
# -----------------------------------------------------------
IMAGE_GENERATION_PROVIDER=gemini

# Gemini Image Configuration (when IMAGE_GENERATION_PROVIDER=gemini)
GEMINI_IMAGE_MODEL_NAME=imagen-3.0-generate-001
